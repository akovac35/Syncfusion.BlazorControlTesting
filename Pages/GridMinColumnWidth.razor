@page "/gridmincolumnwidth"

<h1>GridMinColumnWidth</h1>

<p>Grid column Summary should respect the configured MinWidth="@MinWidth". Try resizing the screen using browser developer tools (F12).</p>
<p>Current correlation id: @CorrelationAccessor.Current?.GetCorrelationId()</p>

<SfGrid DataSource="@Forecasts" AllowPaging="true" TValue="WeatherForecast" Width="100%" AllowResizing="false">
    <GridPageSettings PageSize="10" PageSizes="new int[] { 5, 10, 20}"></GridPageSettings>
    <GridColumns>
        <GridColumn Field=@nameof(WeatherForecast.Id) HeaderText="Id" IsPrimaryKey="true" Visible="false" Width="100"></GridColumn>
        <GridColumn Field=@nameof(WeatherForecast.Summary) HeaderText="Summary" MinWidth="@MinWidth"></GridColumn>
        <GridColumn Field=@nameof(WeatherForecast.TemperatureC) HeaderText="TempC" Width="100"></GridColumn>
        <GridColumn Field=@nameof(WeatherForecast.TemperatureF) HeaderText="TempF" Width="100"></GridColumn>
        <GridColumn Field=@nameof(WeatherForecast.Date) HeaderText="Date" Width="200"></GridColumn>
    </GridColumns>
</SfGrid>
